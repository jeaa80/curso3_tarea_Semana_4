<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/espacioEntreCardView"
    android:layout_marginBottom="@dimen/espacioEntreCardView"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/top"
        android:background="@drawable/borde"
        android:layout_marginLeft="@dimen/padding_info"
        android:layout_marginRight="@dimen/padding_info"
        >

        <ImageView
            android:id="@+id/img_Foto"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/white"
            android:contentDescription="@string/Foto"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            >

        </ImageView>

        <LinearLayout
            android:layout_width="301dp"
            android:layout_height="@dimen/ll_heigth"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b_boton_like"
                android:layout_width="@dimen/icono_bones"
                android:layout_height="match_parent"
                android:background="@drawable/boton_like"
                android:contentDescription="@string/hueso_vacio" />

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_nombre"
                android:fontFamily="@font/indie_flower"
                android:text="@string/nombre"
                android:textSize="@dimen/tamañoFuente" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="@dimen/anchoTextoLikes"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/likes"
                android:textSize="@dimen/tamañoFuente" />

            <ImageButton
                android:id="@+id/b_icono_hueso_amarillo"
                android:layout_width="@dimen/icono_bones"
                android:layout_height="match_parent"
                android:background="@drawable/hueso_amarillo"
                android:contentDescription="@string/BotonHuesoAmarillo" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>