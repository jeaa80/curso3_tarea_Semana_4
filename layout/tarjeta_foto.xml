<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/espacioEntreCardView"
    android:layout_marginBottom="@dimen/espacioEntreCardView"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/top"
        android:background="@drawable/borde"
        android:layout_marginLeft="@dimen/padding_info"
        android:layout_marginRight="@dimen/padding_info"
        >

        <ImageView
            android:id="@+id/img_FotoF"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="@color/white"
            android:contentDescription="@string/Foto"
            android:layout_gravity="center_horizontal">

        </ImageView>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="@dimen/ll_heigth"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_likesF"
                android:layout_width="@dimen/anchoTextoLikes"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_likesF"
                android:text="@string/likes"
                android:textSize="@dimen/tamaÃ±oFuente"/>

            <ImageView
                android:id="@+id/b_icono_hueso_amarilloF"
                android:layout_width="@dimen/icono_bones"
                android:layout_height="match_parent"
                android:background="@drawable/hueso_amarillo"
                android:layout_marginStart="@dimen/padding_huesoF"
                android:contentDescription="@string/BotonHuesoAmarillo" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>